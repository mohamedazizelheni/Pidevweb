{% extends 'base.html.twig' %}

{% block title %}New Annonce{% endblock %}

{% block body %}


    <div style="display: flex;align-items: center;justify-content: center; ">
        <div class="card" style="margin-top: 100px" >
            <div class="card-body" style="margin-top: 20px">
                <h5 class="card-title">Publier une annonce</h5>

                <!-- General Form Elements -->
                {{ form_start(form) }}
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-fom-label" >Titre</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.titrea,{'attr':{'class':'form-control'}})}}


                    </div>
                </div><!--nomuser-->
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Description</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.descriptiona,{'attr':{'class':'form-control'}})}}

                    </div>
                </div><!--//nomannonce-->
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-4 col-form-label">Prix </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.prixa,{'attr':{'class':'form-control'}})}}
                    </div>
                </div><!--//categorieannonce-->
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-5 col-form-label">Date</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.datecreationa,{'attr':{'class':'form-control'}})}}

                    </div>
                </div><!--//descriptionannonce-->
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-4 col-form-label">Image </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.imagea,{'attr':{'class':'form-control'}})}}
                    </div>
                </div><!--//villeannonce-->

                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-4 col-form-label">User </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.user,{'attr':{'class':'form-control'}})}}

                    </div>
                </div><!--//imageannonce-->

                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-4 col-form-label">Categorie </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.categorieannonce,{'attr':{'class':'form-control'}})}}

                    </div>
                </div><!--//imageannonce-->
                <div class="row mb-3">

                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(form.Ajouter,{'attr':{'class':'btn btn-primary'}}) }}

                    </div>
                </div>



                {{form_end(form)}}<!-- End General Form Elements -->

            </div>
        </div>
    </div>

    <a href="{{ path('app_annonce_index') }}">back to list</a>
{% endblock %}
